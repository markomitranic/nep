extends: "eslint:recommended"

env:
  browser: true
  node: true
  es6: true

parser: "babel-eslint"

globals:
    window: true
    $: true
    jQuery: true

rules:
  block-scoped-var: 0
  brace-style:
    - 2
    - 1tbs
  camelcase: 1
  comma-spacing:
    - 2
    -
      after: true
      before: false
  comma-style:
    - 2
    - last
  complexity:
    - 1
    - 20
  consistent-return: 2
  consistent-this:
    - 1
  curly:
    - 2
    - all
  default-case: 2
  dot-notation: 0
  dot-location:
    - 1
    - property
  eol-last: 1
  eqeqeq:
    - 2
    - allow-null
  func-call-spacing: 2
  func-names: 0
  func-style: 0
  generator-star-spacing: 2
  guard-for-in: 1
  handle-callback-err:
    - 2
    - ^err(or)?
  keyword-spacing:
    - 2
    -
      after: true
      before: true
  indent: 0
  key-spacing:
    - 2
    -
      afterColon: true
      beforeColon: false
  max-depth:
    - 1
    - 3
  max-len:
    - 1
    - 120
    - 4
  max-nested-callbacks:
    - 2
    - 4
  max-params:
    - 1
    - 5
  max-statements:
    - 1
    - 35
  new-cap: 0
  new-parens: 1
  no-alert: 2
  no-array-constructor: 2
  no-bitwise: 1
  no-caller: 2
  no-catch-shadow: 2
  comma-dangle: 0
  no-cond-assign:
    - 1
    - except-parens
  no-console: 0
  no-constant-condition: 1
  no-control-regex: 1
  no-debugger: 0
  no-delete-var: 2
  no-div-regex: 1
  no-dupe-keys: 1
  no-dupe-args: 2
  no-duplicate-case: 2
  no-else-return: 1
  no-empty: 1
  no-labels: 1
  no-empty-character-class: 1
  no-eq-null: 0
  no-eval: 2
  no-ex-assign: 2
  no-extend-native: 1
  no-extra-bind: 1
  no-extra-boolean-cast: 1
  no-extra-semi: 1
  no-fallthrough: 1
  no-floating-decimal: 1
  no-func-assign: 2
  no-implied-eval: 2
  no-inline-comments: 0
  no-inner-declarations: 1
  no-invalid-regexp: 2
  no-irregular-whitespace: 1
  no-iterator: 2
  no-label-var: 2
  no-lone-blocks: 1
  no-lonely-if: 2
  no-loop-func: 1
  no-mixed-requires: 1
  no-mixed-spaces-and-tabs: 2
  no-multi-spaces: 1
  no-multi-str: 1
  no-multiple-empty-lines:
    - 1
    -
      max: 1
  no-native-reassign: 2
  no-negated-in-lhs: 2
  no-nested-ternary: 2
  no-new: 1
  no-new-func: 2
  no-new-object: 2
  no-new-require: 2
  no-new-wrappers: 1
  no-obj-calls: 2
  no-octal: 1
  no-octal-escape: 2
  no-path-concat: 1
  no-plusplus: 0
  no-process-env: 0
  no-process-exit: 1
  no-proto: 1
  no-redeclare: 2
  no-regex-spaces: 1
  no-reserved-keys: 0
  no-restricted-modules: 0
  no-return-assign: 1
  no-script-url: 1
  no-self-compare: 1
  no-sequences: 1
  no-shadow: 1
  no-shadow-restricted-names: 2
  semi-spacing: 2
  no-sparse-arrays: 2
  no-sync: 0
  no-ternary: 0
  no-throw-literal: 1
  no-trailing-spaces: 2
  no-undef: 2
  no-undef-init: 1
  no-undefined: 1
  no-underscore-dangle: 2
  no-unreachable: 1
  no-unused-expressions: 0
  no-unused-vars: 1
  no-use-before-define: 1
  no-void: 0
  no-warning-comments: 0
  no-with: 2
  no-extra-parens:
    - 2
    - functions
  one-var: 0
  operator-assignment: 0
  padded-blocks: 0
  quote-props: 0
  quotes:
    - 1
    - single
    - avoid-escape
  radix: 1
  semi:
    - 2
    - always
  sort-vars: 0
  space-before-blocks:
    - 2
    - always
  space-before-function-paren:
    - 2
    - never
  array-bracket-spacing:
    - 2
    - never
  space-in-parens:
    - 2
    - never
  space-infix-ops: 2
  space-unary-ops: 2
  spaced-comment:
    - 1
    - always
    -
      exceptions:
        - "-"
        - +
        - /
        - "*"
  strict:
    - 2
    - global
  use-isnan: 1
  valid-jsdoc:
    - 1
    -
      prefer:
        return: returns
      requireReturn: false
  valid-typeof: 2
  vars-on-top: 0
  wrap-iife:
    - 1
    - inside
  wrap-regex: 0
  yoda:
    - 2
    - never
    -
      exceptRange: true
  accessor-pairs: 1
  computed-property-spacing:
    - 2
    - never
  no-unneeded-ternary: 1
  object-curly-spacing:
    - 2
    - never
  operator-linebreak:
    - 1
    - after

# ES6 rules

  no-var: 2
  no-const-assign: 2
  prefer-arrow-callback: 2
  prefer-const: 2
  prefer-spread: 1
  rest-spread-spacing:
    - 1
    - never
